{
  "name": "rest.bitcoin.com",
  "version": "3.10.3",
  "description": "REST API for Bitcoin.com's Cloud",
  "author": "Gabriel Cardona <gabriel@bitcoin.com>",
  "contributors": [
    "Chris Troutner <chris.troutner@gmail.com>"
  ],
  "license": "MIT",
  "scripts": {
    "start": "npm run build && node ./dist/src/app.js",
    "build": "node ./node_modules/gulp/bin/gulp.js build && ./node_modules/typescript/bin/tsc",
    "dev": "nodemon ./dist/app.js",
    "test": "NETWORK=testnet && npm run build && nyc mocha test/v2/unit --timeout 60000 --exit",
    "test-v2-no-build": "export NETWORK=testnet && nyc --reporter=text mocha --require babel-core/register --timeout 25000 test/v2/",
    "test-all": "TEST=integration nyc --reporter=text mocha --require babel-core/register --timeout 15000 test/v2/",
    "test:integration": "mocha test/v2/integration --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coverage:report": "export NETWORK=testnet && npm run build && nyc --reporter=html mocha --require babel-core/register test/v2/"
  },
  "engines": {
    "node": ">=10.15.3"
  },
  "dependencies": {
    "axios": "0.19.0",
    "bitbox-sdk": "8.3.2",
    "bitcoincash-zmq-decoder": "0.1.5",
    "body-parser": "^1.18.3",
    "cashaccounts": "0.3.3",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.3",
    "express": "^4.15.5",
    "express-basic-auth": "^1.1.3",
    "express-rate-limit": "^2.11.0",
    "gulp-merge-json": "^1.3.1",
    "helmet": "^3.12.1",
    "jade": "~1.11.0",
    "level": "^4.0.0",
    "mocha": "6.1.4",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-anonymous": "^1.0.1",
    "passport-http": "^0.3.0",
    "slp-sdk": "4.3.0",
    "socket.io": "^2.1.1",
    "swagger-stats": "^0.95.6",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.8.0",
    "zeromq": "^4.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.1",
    "bignumber.js": "^8.1.1",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "fs-extra": "^7.0.0",
    "gulp": "^3.9.1",
    "nock": "^10.0.0",
    "nodemon": "^1.18.1",
    "nyc": "^11.6.0",
    "pandacash-core": "^0.1.0",
    "prettier": "^1.14.2",
    "proxyquire": "^2.1.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "semantic-release": "^15.11.0",
    "sinon": "^6.3.4",
    "ts-node": "^8.1.0",
    "typescript": "^3.1.4"
  },
  "release": {
    "publish": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": false
      }
    ]
  }
}
